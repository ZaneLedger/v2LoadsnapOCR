{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "region": "us-central1",
    "predeploy": ["npm --prefix "$RESOURCE_DIR" install"]
  },
  "storage": {
    "defaultBucket": "loadsnap-prod.appspot.com"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
